# editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = off

# Use 2 spaces for the HTML files
[*.html]
indent_size = 2

# The JSON files contain newlines inconsistently
[*.json]
indent_size = 2
insert_final_newline = ignore

# Makefiles always use tabs for indentation
[Makefile]
indent_style = tab

# Batch files use tabs for indentation
[*.{bat,sh}]
indent_style = tab

[*.yaml]
indent_size = 2

[*.yml]
indent_size = 2

[*.py]
profile = black

[Makefile]
indent_style = tab
indent_size = 4

[*.pbtxt]
indent_size = 2
